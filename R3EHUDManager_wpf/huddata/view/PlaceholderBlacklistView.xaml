<view:ModalWindow
    xmlns:view="clr-namespace:da2mvc.framework.application.view;assembly=da2MVC_wpf"
        x:Class="R3EHUDManager_wpf.huddata.view.PlaceholderBlacklistView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:R3EHUDManager_wpf.huddata.view"
        mc:Ignorable="d"
        Title="Filtered placeholders" Height="300" Width="300">

    <DockPanel>
        <TextBlock DockPanel.Dock="Top">Select placeholders to display.<LineBreak/>Changes will be applied on next loaded layout.</TextBlock>
        <Button Name="applyButton" DockPanel.Dock="Bottom" IsDefault="True">Apply</Button>
        <ListBox Name="list">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding Path=IsChecked, Mode=TwoWay}"/>
                        <TextBlock Text="{Binding Path=Name, Mode=OneTime}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>

</view:ModalWindow>
