<view:ModalWindow
    xmlns:view="clr-namespace:da2mvc.framework.application.view;assembly=da2MVC_wpf"
        x:Class="R3EHUDManager.settings.view.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:R3EHUDManager.settings.view"
        mc:Ignorable="d"
        Title="Settings"
        Width="auto" Height="auto" SizeToContent="WidthAndHeight"
        >

    <StackPanel>
        <Label>Prompt for:</Label>
        <CheckBox Name="promptOutsidePlaceholder">Outside placeholders when switching background layout.</CheckBox>
        <CheckBox Name="promptUnsavedProfiledLayout">Unsaved profile when loading a new layout.</CheckBox>
        <CheckBox Name="promptUnsavedLayoutLayout">Unsaved layout when loading a new one.</CheckBox>
        <CheckBox Name="promptUnsavedProfiledExit">Unsaved profile when exiting application.</CheckBox>
        <CheckBox Name="promptUnsavedLayoutExit">Unapplied layout when exiting application.</CheckBox>

        <Label>Culture:</Label>
        <CheckBox Name="useInvariantCulture">Use invariant culture (modify the decimal separator used in numeric up/down controls).</CheckBox>

        <Button Name="applyButton">Apply</Button>
    </StackPanel>

</view:ModalWindow>
